<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ysp.smartwatch"
    android:versionCode="60"
    android:versionName="2.5">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS" /> -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" /> -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- <uses-permission android:name="android.permission.READ_SMS" /> -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> -->
    <!-- <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" /> -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" /> -->
    <!-- <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->
    <application
        android:name="com.ysp.newband.GazelleApplication"
        android:allowBackup="true"
        android:alwaysRetainTaskState="true"
        android:icon="@drawable/hillmassion"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">

        <!--首页-->

        <activity android:name="com.xyy.Gazella.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.xyy.Gazella.activity.DeviceListActivity" />
        <activity android:name="com.xyy.Gazella.activity.ConnectionDevice" />
        <!-- <activity android:name="com.xyy.Gazella.activity.HomeActivity"></activity> -->
        <activity android:name="com.xyy.Gazella.activity.SetUesrDataActivity" />

        <service android:name="com.xyy.Gazella.BroadcastReceiver.PhoneService" />
        <service
            android:name="com.xyy.Gazella.googlebth.BluetoothLeService"
            android:enabled="true" />
       <service android:name="com.xyy.Gazella.services.BluetoothService"></service>

        <activity android:name="com.xyy.Gazella.activity.HealthyActivity" />
        <activity android:name="com.xyy.Gazella.activity.SleepActivity" />


        <activity
            android:name="com.xyy.Gazella.activity.StepActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ExampleTheme" />

        <!--校时页面-->
        <activity android:name="com.xyy.Gazella.activity.TimeSynchronization"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ExampleTheme" />
        <!--起动页面-->
        <activity android:name="com.xyy.Gazella.activity.LaunchActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ExampleTheme"/>

        <activity android:name="com.xyy.Gazella.activity.PairingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ExampleTheme" />

        <activity android:name="com.xyy.Gazella.activity.PersonActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ExampleTheme"/>

        <activity android:name="com.xyy.Gazella.activity.PersonalizeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ExampleTheme"/>
    </application>

</manifest>