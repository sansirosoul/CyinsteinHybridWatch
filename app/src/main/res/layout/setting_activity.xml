<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#1b1b1b"
    android:layout_height="match_parent">
   <include
       layout="@layout/connection_title"
       android:layout_width="match_parent"
       android:layout_height="50dp"/>
   <ScrollView
       android:overScrollMode="never"
       android:scrollbars="none"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:text="@string/watch_setting"
             android:textColor="@color/white"
             android:textSize="18sp"
             android:gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_width="wrap_content"
             android:layout_height="45dp" />
         <LinearLayout
             android:orientation="vertical"
             android:background="#222222"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_user_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv1"
                   android:src="@drawable/page25_user"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv1"
                   android:text="@string/user_setting"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_update_hardware"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv2"
                   android:src="@drawable/page25_jianchagengxin"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv2"
                   android:text="@string/update_hardware"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_change_watch"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv3"
                   android:src="@drawable/page25_genghuanshoubiao"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv3"
                   android:text="@string/change_watch"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_rename_watch"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv4"
                   android:src="@drawable/page25_rename"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv4"
                   android:text="@string/rename_watch"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_clock"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv5"
                   android:src="@drawable/page25_alerm"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv5"
                   android:text="@string/clock"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_clean_watch"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv6"
                   android:src="@drawable/page25_qingchushoubiao"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv6"
                   android:text="@string/clean_watchdata"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_clean_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv7"
                   android:src="@drawable/page25_qingchushouji"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv7"
                   android:text="@string/clean_phonedata"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:src="@drawable/page25_step"
                   android:layout_marginRight="30dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_anti_lost"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv8"
                   android:src="@drawable/page25_fangdiushi"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv8"
                   android:text="@string/anti_lost"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ToggleButton
                   android:background="@drawable/selector_setting"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textOn=""
                   android:textOff=""
                   android:layout_marginRight="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_ble"
                android:layout_width="match_parent"
                android:layout_height="50dp">

               <TextView
                   android:layout_toRightOf="@+id/iv9"
                   android:text="@string/ble"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />


               <ImageView
                   android:id="@+id/iv9"
                   android:src="@drawable/page25_bt"
                   android:layout_marginLeft="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_alignParentStart="true"
                   android:layout_marginStart="19dp" />
               <ToggleButton
                   android:background="@drawable/selector_setting"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textOn=""
                   android:textOff=""
                   android:layout_marginRight="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#2c2c2c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_update_bsl"
                android:layout_width="match_parent"
                android:layout_height="50dp">
               <ImageView
                   android:id="@+id/iv10"
                   android:src="@drawable/page25_bsl"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_toRightOf="@+id/iv10"
                   android:text="@string/bsl"
                   android:textSize="17sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/textView3" />
                <ToggleButton
                    android:background="@drawable/selector_setting"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
         </LinearLayout>
         <TextView
             android:text="@string/software_setting"
             android:textColor="@color/white"
             android:textSize="18sp"
             android:gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_width="wrap_content"
             android:layout_height="45dp" />
         <RelativeLayout
             android:id="@+id/rl_target"
             android:layout_marginBottom="45dp"
             android:background="#222222"
             android:layout_width="match_parent"
             android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv10"
                android:src="@drawable/page25_sport"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/iv10"
                android:text="@string/sport_sleep_target"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/page25_step"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
         </RelativeLayout>
      </LinearLayout>
   </ScrollView>
</LinearLayout>