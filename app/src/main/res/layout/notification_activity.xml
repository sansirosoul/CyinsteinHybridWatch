<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/page24_bg"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent">
    <include
        layout="@layout/connection_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ></include>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/notify_introduce"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />

                <ToggleButton
                    android:id="@+id/all"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/selector_switch"
                    android:textOn=""
                    android:textOff=""
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:src="@drawable/page24_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ToggleButton
                        android:id="@+id/tel"
                        android:background="@drawable/selector_tel"
                        android:textOn=""
                        android:textOff=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ToggleButton
                        android:background="@drawable/selector_emial"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email" />

                    <ToggleButton
                        android:background="@drawable/selector_twitter"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/twitter" />

                    <ToggleButton
                        android:id="@+id/line"
                        android:background="@drawable/selector_line"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ToggleButton
                        android:id="@+id/qq"
                        android:background="@drawable/selector_qq"
                        android:textOn=""
                        android:textOff=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ToggleButton
                        android:id="@+id/facebook"
                        android:background="@drawable/selector_facebook"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ToggleButton
                        android:id="@+id/message"
                        android:background="@drawable/selector_message"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ToggleButton
                        android:id="@+id/skype"
                        android:background="@drawable/selector_skype"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ToggleButton
                        android:id="@+id/wechat"
                        android:background="@drawable/selector_wechat"
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/click_icon"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>