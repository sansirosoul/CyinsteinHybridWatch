        <ImageButton
            android:id="@+id/image_but"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/hillmassion" />

        <ImageButton
            android:id="@+id/image_but"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
